pipeline {
    agent any

    environment {
        EC2_USER = "ubuntu"
        EC2_IP = "18.209.177.222"
        SSH_KEY = credentials('ec2-ssh-key')
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Kalyan9912/secondpipe.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Transfer JAR to EC2') {
            steps {
                sshagent(['ec2-ssh-key']) {
                    sh '''
                        scp -o StrictHostKeyChecking=no target/demo-0.0.1-SNAPSHOT.jar ${EC2_USER}@${EC2_IP}:/home/${EC2_USER}/app.jar
                    '''
                }
            }
        }

        stage('Deploy on EC2') {
            steps {
                sshagent(['ec2-ssh-key']) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ${EC2_USER}@${EC2_IP} '
                            pkill -f "java -jar" || true
                            nohup java -jar /home/${EC2_USER}/app.jar > app.log 2>&1 &
                        '
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "App deployed successfully"
        }
        failure {
            echo "Deployment failed"
        }
    }
}

